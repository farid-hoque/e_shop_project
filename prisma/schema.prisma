generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Brand {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  name String  @unique
  slug String? @unique
  logo String?
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  slug      String   @unique
  photo     String?
  createdAt DateTime @default(now())
}

model Tag {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String  @unique
  slug   String  @unique
  status Boolean @default(true)
}
